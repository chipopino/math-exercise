{
  "name": "math-base",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run js-build && npm run js-minify && npm run css-build && npm run html-build",
    "js-build": "npx babel src/index.js --out-dir dist",
    "js-minify": "minify dist/index.js --out-file dist/index.js --mangle.keepClassName",
    "css-build": "npx postcss src/index.css -o dist/index.css",
    "html-build": "npx html-minifier --input-dir src --output-dir dist --file-ext html --collapse-whitespace --remove-comments"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "autoprefixer": "^10.4.17",
    "babel-minify": "^0.5.2",
    "cssnano": "^6.0.5",
    "html-minifier": "^4.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^9.4.0"
  }
}
